{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "jolt",
  "version": "0.5.0",
  
  "identifier": "dev.bananabas.jolt",
  "build": {
    "beforeDevCommand": "mkdir -p src-tauri/target/debug/assets && cp assets/intermezzo.bin src-tauri/target/debug/assets/ && bun run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "jolt",
        "width": 800,
        "height": 600,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJBRDYzNDdFNEE0NTNENjAKUldSZ1BVVktmalRXdXUxejNsN3l6YVpFQzRJQ0N1djBuU1pjWjM5bGl1VDFpNGVzSUZwUFdScFMK",
      "endpoints": ["https://github.com/user/repo/releases/latest/download/latest.json"]
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "macOS": {
      "files": {
        "Resources/Assets.car": "icons/Assets.car"
      }
    },
    "resources": [
      "icons/Assets.car",
      "../assets/intermezzo.bin"
    ],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
